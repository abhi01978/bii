<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Rajwada Bill</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Poppins:wght@300;500&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: "Poppins", sans-serif;
      background: #f3f4f6;
      padding: 0;
      margin: 0;
    }
    h1 {
      font-family: "Great Vibes", cursive;
    }
    input[readonly] {
      border: none;
      outline: none;
      pointer-events: none;
      background: transparent;
    }

    .print-container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 2rem;
    }

    .a5-wrapper {
      background: white;
      width: 148mm;
      height: auto;
      padding: 10mm;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

    @media print {
      @page {
        size: A4 portrait;
        margin: 0;
      }

      body {
        background: white !important;
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
        margin: 0;
        padding: 0;
      }

      .no-print {
        display: none !important;
      }

      .print-container {
        display: block;
        padding: 0;
        margin: 0;
      }

      .a5-wrapper {
        transform: scale(1.4); /* Adjust this to scale properly */
        transform-origin: top left;
        width: 148mm;
        padding: 10mm;
      }
    }
  </style>
</head>
<body>

  <!-- MAIN CONTAINER -->
  <div class="print-container">
    <div class="a5-wrapper">

      <!-- HEADER -->
      <div class="text-center p-2">
        <h1 class="text-3xl font-bold text-red-600">Rajwada's Creations</h1>
        <p class="italic text-sm">By Limra Collection</p>
        <p class="text-sm text-red-600 font-semibold">(An Exclusive Groom Collection)</p>
        <p class="text-xs mt-1 leading-tight">
          EXCELLENCY IN : COAT SUITS, SHERWANI, INDO WESTERNS, JACKETS, BLAZER & ALL KINDS OF MENS WEAR
        </p>
        <p class="text-xs mt-1">S.NO.-14, SUPER MARKET, 1ST FLOOR, NEAR KANYA VEDIK COLLEGE, WRIGHT GANJ, GHANTA GHAR, GHAZIABAD (U.P.)</p>
        <p class="text-xs mt-1">Mob.: 9650090132, 9899377912, 9911226156</p>
      </div>

      <!-- ORDER + DATE -->
      <div class="flex border border-black p-2">
        <div class="w-1/3 border-r border-black p-2">
          <p class="text-sm font-semibold">Order No.: <span><%= bill.order_no %></span></p>
        </div>
        <div class="w-2/3 p-2 text-sm">
          <p>Booking Date: <span><%= bill.booking_date %></span></p>
          <p>Delivery Date: <span><%= bill.delivery_date %></span></p>
        </div>
      </div>

      <!-- CUSTOMER -->
      <div class="border border-black border-t-0 p-2 text-sm">
        <p>Customer's Name: <span><%= bill.customer_name %></span></p>
        <p>Add./Ph.: <span><%= bill.address %> | <%= bill.phone %></span></p>
      </div>

      <!-- DESCRIPTION TABLE -->
      <table class="w-full border border-black text-sm mt-2 border-collapse">
        <thead>
          <tr>
            <th class="border border-black p-1 text-center w-1/12">S.No.</th>
            <th class="border border-black p-1 text-left w-7/12">DESCRIPTION</th>
            <th class="border border-black p-1 text-right w-4/12">Amount</th>
          </tr>
        </thead>
        <tbody>
          <% if (bill.items && bill.items.length > 0) { %>
            <% bill.items.forEach((item, index) => { %>
              <tr>
                <td class="border border-black p-1 text-center"><%= index + 1 %></td>
                <td class="border border-black p-1"><%= item.description %></td>
                <td class="border border-black p-1 text-right">‚Çπ<%= item.amount %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td class="border border-black p-1 text-center">1</td>
              <td class="border border-black p-1"><%= bill.description || 'No description' %></td>
              <td class="border border-black p-1 text-right">‚Çπ<%= bill.total %></td>
            </tr>
          <% } %>

          <!-- Totals -->
          <tr>
            <td colspan="2" class="border border-black p-1 text-right font-semibold">Total</td>
            <td class="border border-black p-1 text-right font-semibold">‚Çπ<%= bill.total %></td>
          </tr>
          <tr>
            <td colspan="2" class="border border-black p-1 text-right font-semibold">Advance</td>
            <td class="border border-black p-1 text-right font-semibold">‚Çπ<%= bill.advance %></td>
          </tr>
          <tr>
            <td colspan="2" class="border border-black p-1 text-right font-semibold">Balance</td>
            <td class="border border-black p-1 text-right font-semibold">‚Çπ<%= bill.balance %></td>
          </tr>
        </tbody>
      </table>

      <!-- NOTES -->
      <div class="text-xs mt-2 leading-tight">
        <p>1) Please bring this slip when you call for your order</p>
        <p>2) We are not responsible for any alteration after delivery</p>
        <p>3) Please take your delivery within 30 days for the due date, thereafter we shall not responsible for any Garments</p>
      </div>

      <!-- SIGNATURE -->
      <div class="text-right font-semibold mt-3">For Rajwada's Creations</div>

    </div>
  </div>

  <!-- PRINT BUTTON -->
  <div class="text-center mt-4 no-print">
    <button onclick="window.print()" class="bg-green-600 text-white px-6 py-2 rounded">üñ®Ô∏è Print Bill</button>
  </div>

</body>
</html>
