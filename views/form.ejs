<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Rajwada Billing Form</title>
  </head>
  <body class="bg-gray-100 p-4">
<div class="flex space-x-4">
<a href="/all-bills"
     class="bg-blue-600 text-white px-5 py-2 rounded-md hover:bg-blue-700 transition duration-300">
    All Bills
  </a>
</div>

    <div class="max-w-3xl mx-auto bg-white p-6 rounded shadow">
      <!-- Header -->
      <!-- Google Fonts -->
      <link
        href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Poppins:wght@300;500&display=swap"
        rel="stylesheet"
      />

<div
        class="bg-black text-white p-6 rounded-md shadow-lg max-w-3xl mx-auto text-center"
      >
        <!-- Top Gold Decoration -->
        <div class="text-yellow-500 text-2xl mb-2 select-none">✦✦✦✦✦</div>

        <!-- Main Title -->
        <h1
          class="text-5xl font-bold mb-2"
          style="font-family: 'Great Vibes', cursive"
        >
          Rajwada's Creations
        </h1>

        <!-- Subtitle -->
        <p
          class="text-xl italic mb-4"
          style="font-family: 'Great Vibes', cursive"
        >
          The Designer Studio
        </p>
        <h1
          class="text-3xl font-bold mb-2"
          style="font-family: 'Great Vibes', cursive"
        >
          Billing
        </h1>

        <!-- Bottom Gold Decoration -->
        <div class="text-yellow-500 text-2xl mb-4 select-none">✦✦✦✦✦</div>

        <!-- By Line -->
        <p
          class="text-sm text-gray-300 mb-2"
          style="font-family: 'Poppins', sans-serif"
        >
          By Limra Collection
        </p>

        <!-- Tagline -->
        <p
          class="text-xs italic mb-1"
          style="font-family: 'Poppins', sans-serif"
        >
          (An Exclusive Groom Collection)
        </p>

        <!-- Services -->
        <p
          class="text-xs mb-1 px-4 leading-relaxed"
          style="font-family: 'Poppins', sans-serif"
        >
          EXCELLENCY IN: COAT SUITS, SHERWANI, INDO WESTERNS, JACKETS, BLAZER &
          ALL KINDS OF MENS WEAR
        </p>

        <!-- Address -->
        <p class="text-xs mb-1" style="font-family: 'Poppins', sans-serif">
          S.NO.-14, SUPER MARKET, IST FLOOR, NEAR KANYA VEDIK COLLEGE, GHAZIABAD
          (U.P.)
        </p>

        <!-- Mobile Numbers -->
        <p class="text-xs mt-2" style="font-family: 'Poppins', sans-serif">
          Mob: 9650090132, 9899377912, 9911226156
        </p>
</div>

      <!-- Form -->
      <!-- Google Fonts (Optional) -->
      <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500&display=swap"
        rel="stylesheet"
      />

      <form
        action="/submit"
        method="POST"
        class="space-y-4 py-4 font-[Poppins] text-sm"
      >
        <!-- Top Row: Order No., Booking Date, Delivery Date -->
        <div class="flex flex-wrap gap-4">
          <div class="w-full md:w-1/4">
            <label class="block mb-1 text-gray-700">Order No.</label>
            <input
              type="text"
              name="order_no"
              placeholder="Order No."
              class="border p-2 w-full"
              required
            />
          </div>
          <div class="w-full md:w-1/3">
            <label class="block mb-1 text-gray-700">Booking Date</label>
            <input
              type="date"
              name="booking_date"
              class="border p-2 w-full"
              required
            />
          </div>
          <div class="w-full md:w-1/3">
            <label class="block mb-1 text-gray-700">Delivery Date</label>
            <input
              type="date"
              name="delivery_date"
              class="border p-2 w-full"
              required
            />
          </div>
        </div>

        <!-- Customer Info -->
        <div>
          <label class="block mb-1 text-gray-700">Customer's Name</label>
          <input
            type="text"
            name="customer_name"
            placeholder="Customer's Name"
            class="border p-2 w-full"
            required
          />
        </div>

        <div>
          <label class="block mb-1 text-gray-700">Customer Address</label>
          <input
            type="text"
            name="address"
            placeholder="Customer Address"
            class="border p-2 w-full"
            required
          />
        </div>

        <div>
          <label class="block mb-1 text-gray-700">Mobile Number</label>
          <input
            type="text"
            name="phone"
            placeholder="Mobile Number"
            class="border p-2 w-full"
            required
          />
        </div>

        <!-- Items Table -->
        <div>
          <label class="block mb-1 text-gray-700">Order Details</label>
          <table class="w-full border text-sm">
            
            <tbody id="items">
              <tr>
                <td class="border p-1">
                  <input
                    name="sno[]"
                    value="1"
                    class="w-full border-none outline-none"
                    readonly
                  />
                </td>
                <td class="border p-1">
                  <input
                    name="description[]"
                    class="w-full border-none outline-none"
                    required
                  />
                </td>
                <td class="border p-1">
                  <input
                    name="amount[]"
                    type="number"
                    class="w-full border-none outline-none"
                    required
                  />
                </td>
              </tr>
            </tbody>
          </table>
          <button
            type="button"
            onclick="addRow()"
            class="mt-2 bg-green-500 text-white px-3 py-1 rounded"
          >
            + Add Row
          </button>
        </div>

        <!-- Payment Info -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block mb-1 text-gray-700">Total</label>
            <input
              type="number"
              name="total"
              placeholder="Total"
              class="border p-2 w-full"
              required
            />
          </div>
          <div>
            <label class="block mb-1 text-gray-700">Advance</label>
            <input
              type="number"
              name="advance"
              placeholder="Advance"
              class="border p-2 w-full"
              required
            />
          </div>
          <div>
            <label class="block mb-1 text-gray-700">Balance</label>
            <input
              type="number"
              name="balance"
              placeholder="Balance"
              class="border p-2 w-full"
              required
            />
          </div>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="mt-6 bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded w-full"
        >
          Submit & Review
        </button>
      </form>
    </div>
    <script>
      function addRow() {
        const tbody = document.getElementById("items");
        const rowCount = tbody.rows.length + 1;

        const row = document.createElement("tr");
        row.innerHTML = `
      <td class="border p-1"><input name="sno[]" value="${rowCount}" class="w-full border-none outline-none" readonly /></td>
      <td class="border p-1"><input name="description[]" class="w-full border-none outline-none" required /></td>
      <td class="border p-1"><input name="amount[]" type="number" class="w-full border-none outline-none" required /></td>
    `;
        tbody.appendChild(row);
      }
    </script>
  </body>
</html>



