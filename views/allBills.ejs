<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>All Bills</title>
</head>
<body class="p-6 bg-gray-50">
  <div class="max-w-6xl mx-auto bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-bold mb-4">All Customer Bills</h2>
    <table class="w-full border text-sm">
      <thead class="bg-gray-100">
        <tr>
          <th class="border p-2">#</th>
          <th class="border p-2">Customer Name</th>
          <th class="border p-2">Mobile</th>
          <th class="border p-2">Booking Date</th>
          <th class="border p-2 text-center" colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% bills.forEach((bill, index) => { %>
          <tr class="hover:bg-gray-50">
            <td class="border p-2 text-center"><%= index + 1 %></td>
            <td class="border p-2"><%= bill.customer_name %></td>
            <td class="border p-2"><%= bill.phone %></td>
            <td class="border p-2"><%= bill.booking_date %></td>
            <td class="border p-2 text-center">
              <a href="/display/<%= bill._id %>" target="_blank" class="text-blue-600 hover:underline">Open</a>
            </td>
            <td class="border p-2 text-center">
              <a href="/edit/<%= bill._id %>" class="text-yellow-600 hover:underline">Edit</a>
            </td>
            <td class="border p-2 text-center">
              <form action="/delete/<%= bill._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this bill?');">
                <button type="submit" class="text-red-600 hover:underline">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
